#############################################
# Forge monorepo environment (Docker Compose)
# Copy to .env and adjust as needed
#############################################

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong
POSTGRES_DB=forge
POSTGRES_PORT=5432

# App ports
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Test profile ports and DB
POSTGRES_TEST_DB=forge_test
BACKEND_TEST_PORT=8001
FRONTEND_TEST_PORT=5180

# Backend settings
# In-container default points to the compose service name `postgres`
DATABASE_URL=postgresql+psycopg://postgres:change-me-strong@postgres:5432/forge
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:5173"]

# Parsing / LLM
PARSER_ALLOW_LLM=true
PARSER_PROVIDER=mock
AI_ENABLE=true
ALLOWED_AI_USER_IDS=
OPENAI_API_KEY=
OPENAI_PROJECT_ID=
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TIMEOUT_S=20
OPENAI_BASE_URL=

# Frontend dev proxy target (used by Vite config)
# For in-container dev we default to http://backend:${BACKEND_PORT}
# You may override on host dev with http://localhost:${BACKEND_PORT}
VITE_PROXY_TARGET=

#############################################
# Infrastructure references
#############################################

